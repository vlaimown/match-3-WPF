<Window x:Class="Match3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="RootGrid">
        <Button x:Name="PlayButton" 
                Content="Play" 
                HorizontalAlignment="Center" 
                Width="100px" 
                Height="25px" 
                VerticalAlignment="Center"
                Cursor="Hand"
                Click="PlayButton_Click"/>
        <TextBlock Name="Time"  TextWrapping="Wrap" Text="TIME: 60" Margin="28,20,684,382"/>
        <TextBlock Name="Score" TextWrapping="Wrap" Text="SCORE: 0" Margin="28,57,0,345" HorizontalAlignment="Left" Width="88"/>
    </Grid>
</Window>
