<Window x:Class="Match3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Match3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="RootGrid">
        <Button x:Name="PlayButton" 
                Content="Play" 
                HorizontalAlignment="Left" 
                Width="100px" 
                Height="25px" 
                VerticalAlignment="Top"
                Cursor="Hand"
                Click="PlayButton_Click" Canvas.Left="350" Canvas.Top="200"/>
        <TextBlock Name="Time"  TextWrapping="Wrap" Text="TIME: 60" Margin="28,20,684,382"/>
        <TextBlock Name="Score" TextWrapping="Wrap" Text="SCORE: 0" HorizontalAlignment="Left" Width="88" Canvas.Left="28" Canvas.Top="41"/>
        <TextBlock Name="txt" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Canvas.Left="140" Canvas.Top="28"/>
    </Canvas>
</Window>
